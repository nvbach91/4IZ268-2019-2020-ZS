<div class="col-xl-{$size} col-lg-12">

    <!--Begin::Portlet-->
    <div id="validace" class="kt-portlet kt-portlet--height-fluid" data-ktportlet="true">
        <div class="kt-portlet__head">
            <div class="kt-portlet__head-label">
                <h3 class="kt-portlet__head-title">
                    Zdrojový kód
                </h3>
            </div>
            <div class="kt-portlet__head-toolbar">
                <ul class="nav nav-pills nav-pills-sm nav-pills-label nav-pills-bold" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#lab_web_validace_overview" role="tab">
                            Přehled
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#lab_web_validace_messages" role="tab">
                            Chyby
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="tab-content">
                <div class="tab-pane active" id="lab_web_validace_overview">
                    <div class="kt-widget12">
                        <div class="kt-widget12__content">
                            <div class="kt-widget12__item">
                                <div class="kt-widget12__info">
                                    <span class="kt-widget12__desc">Kritické chyby</span>
                                    <span id="validace_errors_count" class="kt-widget12__value">n/a</span>
                                </div>
                                <div class="kt-widget12__info">
                                    <span class="kt-widget12__desc">Varování</span>
                                    <span id="validace_warnings_count" class="kt-widget12__value">n/a</span>
                                </div>
                            </div>
                            <div class="kt-widget12__item">
                                <div class="kt-widget12__info">
                                    <span class="kt-widget12__desc">Celkový počet chyb</span>
                                    <span id="validace_total_count" class="kt-widget12__value">n/a</span>
                                </div>
                                <div class="kt-widget12__info">
                                    <span class="kt-widget12__desc">Výsledné skóre</span>
                                    <span id="validace_total_score" class="kt-widget12__progress">
																<div class="progress progress-sm">
																	<div class="progress-bar kt-bg-brand" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
																</div>
																<span class="kt-widget12__stat">

																</span>
															</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="lab_web_validace_messages">

                    <!--Begin::Timeline 3 -->
                    <div class="kt-timeline-v3">
                        <div class="kt-timeline-v3__items">
                            <p>Žádné chyby</p>
                        </div>
                    </div>
                    <!--End::Timeline 3 -->
                </div>
            </div>
        </div>
    </div>

    <!--End::Portlet-->
</div>